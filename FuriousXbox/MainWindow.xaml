<Window x:Class="FuriousXbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FuriousXbox"
        mc:Ignorable="d"
        Title="Furious Xbox Alpha v0.0" Height="450" Width="800">


    <Grid Background="#FFBA2B2B" Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240*"/>
            <ColumnDefinition Width="67*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="ToolLogo" Content="FURIOUS XBOX" HorizontalAlignment="Left" Margin="137,17,0,0" VerticalAlignment="Top" FontSize="72" Height="106" Width="497"/>

        <Button x:Name="ConnectButton" Content="Connect" HorizontalAlignment="Left" Margin="327,128,0,0" VerticalAlignment="Top" Height="36" Width="117" Background="#FF2C2B2B" Foreground="White" Click="ConnectButton_Click"/>
        <Button x:Name="GodModeCheatButton" Content="Godmode" HorizontalAlignment="Left" Margin="30,263,0,0" VerticalAlignment="Top" Height="36" Width="117" Background="#FF2C2B2B" Foreground="White" IsEnabled="False" Click="GodModeCheatButton_Click"/>
        <Button x:Name="NoClipCheatButton" Content="No Clip" HorizontalAlignment="Left" Margin="30,313,0,0" VerticalAlignment="Top" Height="36" Width="117" Background="#FF2C2B2B" Foreground="White" IsEnabled="False" Click="NoClipCheatButton_Click"/>
        <Button x:Name="UfoModeCheatButton" Content="Ufo Mode" HorizontalAlignment="Left" Margin="161,313,0,0" VerticalAlignment="Top" Height="36" Width="117" Background="#FF2C2B2B" Foreground="White" IsEnabled="False" Click="UfoModeCheatButton_Click"/>
        <Button x:Name="InfAmmoCheatButton" Content="Infinite Ammo" HorizontalAlignment="Left" Margin="161,363,0,0" VerticalAlignment="Top" Height="36" Width="117" Background="#FF2C2B2B" Foreground="White" IsEnabled="False" Click="InfAmmoCheatButton_Click"/>
        <Button x:Name="NoRecoilCheatButton" Content="No Recoil" HorizontalAlignment="Left" Margin="30,363,0,0" VerticalAlignment="Top" Height="36" Width="117" Background="#FF2C2B2B" Foreground="White" IsEnabled="False" Click="NoRecoilCheatButton_Click"/>
        <ComboBox x:Name="ClientComboBox" IsEnabled="False" HorizontalAlignment="Left" Margin="327,230,0,0" VerticalAlignment="Top" Width="117" DropDownOpened="ClientComboBox_DropDownOpened" SelectionChanged="ClientComboBox_SelectionChanged" Height="22"/>
        <TextBox x:Name="GClientNameTextBox" HorizontalAlignment="Left" Margin="478,230,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Height="22"/>
        <Button x:Name="ChangeGClientNameButton" Content="Change Name" HorizontalAlignment="Left" Margin="478,263,0,0" VerticalAlignment="Top" Height="31" Width="117" Background="#FF2C2B2B" Foreground="White" IsEnabled="False" Click="ChangeGClientNameButton_Click"/>
        <Button x:Name="ThermalRedBoxesCheatButton" Content="Thermal Redbox" HorizontalAlignment="Left" Margin="161,263,0,0" VerticalAlignment="Top" Height="36" Width="117" Background="#FF2C2B2B" Foreground="White" IsEnabled="False" Click="ThermalRedBoxesCheatButton_Click"/>

        <Button x:Name="UnlockAllCheatButton" Content="Unlock All" HorizontalAlignment="Left" Margin="327,263,0,0" VerticalAlignment="Top" Height="36" Width="117" Background="#FF2C2B2B" Foreground="White" IsEnabled="False" Click="UnlockAllCheatButton_Click"/>

        <GroupBox Header="GroupBox" Margin="617,132,19,68" Grid.ColumnSpan="2">
            <Grid Margin="12,0,-12,0" >
                <CheckBox x:Name="checkBox1" Content="Test" HorizontalAlignment="Center" VerticalAlignment="Top" Checked="CheckBox_Checked" Grid.Column="1" Margin="0,37,0,0" Height="15" Width="41"/>
                <Button x:Name="button_test" Content="Test" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="-4.089,-1.802" Height="20" Width="115" Click="Button_Click" Grid.ColumnSpan="2" Margin="10,29,0,0"/>
                <CheckBox Content="CheckBox" HorizontalAlignment="Center" Margin="0,82,0,0" VerticalAlignment="Top" Height="15" Width="70" Checked="CheckBox_Checked_1" Unchecked="check1_Unchecked"/>
                <CheckBox x:Name="check1" Content="CheckBox" HorizontalAlignment="Center" VerticalAlignment="Center" Height="15" Width="71" Checked="check1_Checked"/>
                <CheckBox x:Name="check2" Content="CheckBox" HorizontalAlignment="Center" Margin="0,121,0,0" VerticalAlignment="Top"/>
                <CheckBox x:Name="check3" Content="CheckBox" HorizontalAlignment="Center" Margin="0,141,0,0" VerticalAlignment="Top"/>
                <CheckBox x:Name="check4" Content="CheckBox" HorizontalAlignment="Center" Margin="0,161,0,0" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
        <ComboBox x:Name="comboxRGB" HorizontalAlignment="Left" Margin="171,135,0,0" VerticalAlignment="Top" Width="120" Height="22"/>

    </Grid>
</Window>
